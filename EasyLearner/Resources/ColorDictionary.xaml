<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:AudioConverter.Resources"
	xmlns:media="using:CommunityToolkit.WinUI.UI.Media">
	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Dark">

			<SolidColorBrush x:Key="MainBackgroundColor" Color="#141416" />
			<SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#242426" />
			<SolidColorBrush x:Key="MainForegroundColor" Color="#ffffff" />
			<SolidColorBrush x:Key="SplitterColor" Color="#3fffffff" />

			<SolidColorBrush x:Key="DialogsOverlayBackgroundBrush" Color="#66000000" />

			<SolidColorBrush x:Key="DialogsBackgroundColor" Color="#212121" />
		</ResourceDictionary>

		<ResourceDictionary x:Key="Light">
			<SolidColorBrush x:Key="MainBackgroundColor" Color="#fdfdfd" />
			<SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#dddddf" />
			<SolidColorBrush x:Key="MainForegroundColor" Color="#00090a" />
			<SolidColorBrush x:Key="SplitterColor" Color="#3f000000" />
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

	<media:AcrylicBrush
		x:Key="PanelsBackgroundBlurredBrush"
		BlurAmount="12"
		Opacity="0.9"
		TintColor="#242424" />
</ResourceDictionary>
